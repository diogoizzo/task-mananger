// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StatusProjeto {
  naoIniciado
  pausado
  emProgresso
  finalizado
}

enum StatusTarefa {
  proximasAcoes
  emProgresso
  pausada
  aguardando
  planejada
  concluida
}

model User {
  id            String       @id @default(cuid())
  password      String
  name          String?
  email         String?      @unique
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  emailVerified DateTime?
  image         String?
  imboxes       Inbox[]
  projetos      Projeto[]
  tarefas       Tarefa[]
  comentarios   Comentario[]
}

model Inbox {
  id        String   @id @default(cuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Projeto {
  id          String        @id @default(cuid())
  title       String
  description String?
  status      StatusProjeto @default(naoIniciado)
  startDate   DateTime      @default(now())
  dueDate     DateTime?
  dueAt       DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  user        User          @relation(fields: [userId], references: [id])
  userId      String
  tarefas     Tarefa[]
}

model Tarefa {
  id           String       @id @default(cuid())
  title        String
  description  String?
  status       StatusTarefa @default(planejada)
  startDate    DateTime     @default(now())
  dueDate      DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  dueAt        DateTime?
  user         User         @relation(fields: [userId], references: [id])
  userId       String
  projeto      Projeto?     @relation(fields: [projetoId], references: [id])
  projetoId    String?
  comentarios  Comentario[]
  dependencias Tarefa[]     @relation("dependencias")
  depTarefaId  String?
  depTarefa    Tarefa?      @relation("dependencias", fields: [depTarefaId], references: [id])
}

model Comentario {
  id        String   @id @default(cuid())
  texto     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tarefa    Tarefa   @relation(fields: [tarefaId], references: [id])
  tarefaId  String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
